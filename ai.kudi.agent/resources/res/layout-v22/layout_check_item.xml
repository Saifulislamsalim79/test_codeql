<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/option_item_wrapper" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="8dp" android:layout_marginEnd="16dp">
        <ImageView android:id="@+id/iv_check_icon" android:layout_width="20dp" android:layout_height="20dp" app:srcCompat="@drawable/ic_unselected"/>
        <TextView android:textColor="@color/colorPrimary" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/tv_item_name" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:fontFamily="@font/sofia_pro_medium" android:paddingStart="8dp" android:paddingEnd="16dp" android:paddingVertical="8dp"/>
    </LinearLayout>
    <TextView android:textSize="@dimen/text_14sp" android:textColor="@color/colorPrimary" android:id="@+id/tv_item_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="32dp"/>
</LinearLayout>
