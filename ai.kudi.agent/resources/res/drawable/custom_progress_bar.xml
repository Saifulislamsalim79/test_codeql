<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:startColor="@color/secondaryTextColor" android:endColor="@color/secondaryTextColor" android:angle="270" android:centerY="0.75" android:centerColor="@color/secondaryTextColor"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient android:startColor="@color/orange" android:endColor="@color/orange" android:angle="270" android:centerY="0.75" android:centerColor="@color/orange"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient android:startColor="@color/colorPrimary" android:endColor="@color/colorPrimary" android:angle="270" android:centerY="0.75" android:centerColor="@color/colorPrimaryDark"/>
            </shape>
        </clip>
    </item>
</layer-list>
