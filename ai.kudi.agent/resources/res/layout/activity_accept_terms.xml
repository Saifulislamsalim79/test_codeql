<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
    <WebView android:id="@+id/terms_web_view" android:background="@color/page_background" android:padding="20dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardElevation="20dp">
        <LinearLayout android:gravity="center" android:padding="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <ai.kudi.dip.library.button.KudiButton android:id="@+id/reject_terms" android:padding="5dp" android:layout_width="150dp" android:layout_marginEnd="@dimen/dimen_10dp" app:buttonDrawable="@drawable/ic_cancel" app:buttonText="@string/no_cancel" style="@style/KudiSecondaryButton"/>
            <ai.kudi.dip.library.button.KudiButton android:layout_gravity="end" android:id="@+id/accept_terms" android:layout_width="150dp" android:layout_marginStart="@dimen/dimen_10dp" app:buttonText="@string/yes_i_accept" style="@style/KudiPrimaryButtonEnabled"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
