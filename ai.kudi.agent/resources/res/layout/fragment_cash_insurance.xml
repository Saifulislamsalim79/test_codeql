            <ai.kudi.agent.settings.insurance.p026ui.widget.NameValuePairView android:id="@+id/insurance_date_created_view" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/top_divider" app:nameText="@string/date_created" app:shouldShowDivider="true"/>
