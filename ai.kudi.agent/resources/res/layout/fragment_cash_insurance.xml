            <TextView android:id="@+id/amount_paid_kobo_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="30dp" app:layout_constraintBottom_toBottomOf="@+id/amount_paid_text" app:layout_constraintStart_toEndOf="@+id/amount_paid_text" app:layout_constraintTop_toTopOf="@+id/amount_paid_text" style="@style/textViewStyle"/>
