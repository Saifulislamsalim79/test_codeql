<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="@dimen/pdf_receipt_width" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/banner" android:padding="30dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="0">
        <androidx.appcompat.widget.AppCompatImageView android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/nomba_logo"/>
        <androidx.appcompat.widget.AppCompatImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="6dp" app:srcCompat="@drawable/ic_nomba_text"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:padding="@dimen/dimen_30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textStyle="bold" android:textColor="#64000000" android:gravity="center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/transaction_receipt" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="0" app:layout_constraintTop_toTopOf="0"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/transaction_details_wrapper" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/title"/>
        <TextView android:textColor="#64000000" android:id="@+id/reference_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="@string/reference" app:layout_constraintTop_toBottomOf="@+id/transaction_details_wrapper"/>
        <View android:id="@+id/reference_divider" android:background="@color/listDividerColor" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/reference_label"/>
        <TextView android:textSize="@dimen/text_14sp" android:id="@+id/reference_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" app:layout_constraintTop_toBottomOf="@+id/reference_divider"/>
        <TextView android:textColor="#64000000" android:id="@+id/reason_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="@string/reason_for_transaction" app:layout_constraintTop_toBottomOf="@+id/reference_text"/>
        <View android:id="@+id/reason_divider" android:background="@color/listDividerColor" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/reason_label"/>
        <TextView android:textSize="@dimen/text_14sp" android:id="@+id/reason_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" app:layout_constraintTop_toBottomOf="@+id/reason_divider"/>
        <TextView android:textColor="#64000000" android:id="@+id/customer_details_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="@string/customer_details" app:layout_constraintTop_toBottomOf="@+id/reason_text"/>
        <View android:id="@+id/customer_details_divider" android:background="@color/listDividerColor" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/customer_details_label"/>
        <TextView android:textColor="#64000000" android:id="@+id/customer_name_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/name" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/customer_details_divider"/>
        <TextView android:textStyle="bold" android:id="@+id/customer_name_text" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="@+id/customer_name_label"/>
        <TextView android:textColor="#64000000" android:id="@+id/customer_phone_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/phone_number" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/customer_name_text"/>
        <TextView android:textStyle="bold" android:id="@+id/customer_phone_text" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="@+id/customer_phone_label"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@color/list_divider" android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginTop="@dimen/dimen_10dp">
        <TextView android:textStyle="bold" android:textColor="#64000000" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/support"/>
        <TextView android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="support@nomba.com"/>
    </LinearLayout>
</LinearLayout>
