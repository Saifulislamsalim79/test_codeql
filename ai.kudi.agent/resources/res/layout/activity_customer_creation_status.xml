<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/closeImageView" android:padding="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentStart="true" app:srcCompat="@drawable/ic_close_black"/>
    <ImageView android:id="@+id/transactionImageViewStatus" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginBottom="40dp" android:layout_above="@+id/text_header" android:layout_centerHorizontal="true" app:srcCompat="@drawable/ic_transaction_assigned_success"/>
    <TextView android:textSize="20sp" android:textColor="@color/primaryTextColor" android:id="@+id/text_header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_centerInParent="true" android:layout_centerHorizontal="true" style="@style/textViewStyle"/>
    <TextView android:textColor="@color/secondaryTextColor" android:id="@+id/text_details" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:text="@string/transaction_assigned_success_text" android:layout_below="@+id/text_header" android:layout_centerHorizontal="true" android:textAlignment="center" style="@style/textViewStyle"/>
</RelativeLayout>
