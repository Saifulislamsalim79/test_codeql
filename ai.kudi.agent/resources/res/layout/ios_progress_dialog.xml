<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_horizontal" android:layout_gravity="center" android:orientation="vertical" android:id="@+id/rootView" android:background="@drawable/progress_hud_bg" android:paddingLeft="30dp" android:paddingTop="20dp" android:paddingRight="30dp" android:paddingBottom="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/title_frame" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:layout_centerHorizontal="true">
        <ImageView android:id="@+id/title_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/title_icon_margin" android:scaleType="fitXY" android:layout_marginEnd="@dimen/title_icon_margin"/>
        <TextView android:textColor="@color/standard_white" android:id="@+id/title_text" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/standard_title"/>
    </LinearLayout>
    <com.gmail.samehadar.iosdialog.CamomileSpinner android:id="@+id/spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/title_frame" android:layout_centerHorizontal="true"/>
    <TextView android:textColor="@color/standard_white" android:id="@+id/message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/standard_message" android:layout_below="@+id/spinner" android:layout_centerHorizontal="true"/>
</RelativeLayout>
