<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="3">
    <ImageView android:id="@+id/imageView" android:padding="5dp" android:layout_width="29dp" android:layout_height="35dp" android:layout_weight="1" app:tint="@color/colorPrimary"/>
    <TextView android:layout_gravity="center_vertical" android:id="@+id/titleTextView" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_weight="1.5" style="@style/textViewStyle"/>
    <TextView android:layout_gravity="center_vertical" android:id="@+id/descriptionTextView" android:layout_width="50dp" android:layout_height="wrap_content" android:layout_weight="1.5" style="@style/textViewStyle"/>
</LinearLayout>
