<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content">
    <EditText android:id="@+id/voucherEditText" android:focusable="false" android:layout_marginLeft="16dp" android:layout_marginTop="20dp" android:layout_marginRight="16dp" android:hint="@string/enter_voucher_code" android:maxLines="1" android:maxLength="15" android:layout_below="@+id/linearLayout4" android:inputType="none" style="@style/TextStyle"/>
    <LinearLayout android:id="@+id/linearLayout4" android:background="@color/lightYellow" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:layout_marginEnd="16dp">
        <TextView android:textSize="14sp" android:textColor="@color/darkBrownYellow" android:gravity="center" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/voucher_cashout"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/progressBar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/voucherEditText" android:layout_centerHorizontal="true" app:layout_constraintStart_toStartOf="0"/>
    <ai.kudi.dip.library.button.KudiButton android:id="@+id/sendVoucherButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:layout_below="@+id/voucherEditText" app:buttonText="@string/confirm_voucher_payment" app:layout_constraintTop_toBottomOf="@+id/voucherEditText" style="@style/KudiPrimaryButtonEnabled.ContinueButton"/>
    <ai.kudi.dip.library.keypad.PinpadView android:id="@+id/pinTextInput" android:layout_width="match_parent" android:layout_alignParentBottom="true" style="@style/KeyPadStyle"/>
</RelativeLayout>
