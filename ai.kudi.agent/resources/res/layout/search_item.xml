<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp">
        <ImageView android:id="@+id/selectedImage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:foregroundGravity="center" android:layout_alignParentEnd="true"/>
        <TextView android:textSize="14sp" android:textColor="@color/colorPrimary" android:id="@+id/bank_name_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View android:id="@+id/divider" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="1dp" android:alpha="0.1"/>
</LinearLayout>
