        <ai.kudi.dip.library.filter.KudiDateAndTypeFilterView android:orientation="horizontal" android:id="@+id/filter_view" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:elevation="5dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
