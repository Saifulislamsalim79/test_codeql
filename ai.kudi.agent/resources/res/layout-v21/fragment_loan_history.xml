            <androidx.appcompat.widget.AppCompatImageView android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_organize"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/light_text_color" android:gravity="center" android:id="@+id/empty_state_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:text="@string/no_loan_history" android:fontFamily="@font/garant_medium"/>
            <TextView android:textColor="@color/light_text_color" android:gravity="center" android:id="@+id/empty_state_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/you_have_not_applied_for_any_loans" android:fontFamily="@font/garant_regular"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
