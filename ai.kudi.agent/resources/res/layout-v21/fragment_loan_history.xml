        <ProgressBar android:id="@+id/nextLoadingProgressBar" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintHorizontal_bias="0.498" app:layout_constraintStart_toStartOf="0"/>
